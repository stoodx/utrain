<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/train">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewFrom"
        android:id="@+id/textViewFrom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFromA"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewFrom"
        android:layout_toEndOf="@+id/textViewFrom" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFrom"
        android:layout_below="@+id/spinnerFromA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDate"
        android:textAllCaps="false"
        android:text="@string/buttonDate"
        android:layout_gravity="center"
        android:layout_alignLeft="@+id/buttonRequest"
        android:layout_alignStart="@+id/buttonRequest"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/spinnerFrom"
        android:onClick="onClickWhen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewTo"
        android:id="@+id/textViewTo"
        android:layout_below="@+id/buttonDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerToA"
        android:layout_alignTop="@+id/textViewTo"
        android:layout_toRightOf="@+id/textViewFrom"
        android:layout_toEndOf="@+id/textViewFrom" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTo"
        android:layout_below="@+id/spinnerToA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonRequest"
        android:id="@+id/buttonRequest"
        android:textAllCaps="false"
        android:layout_below="@+id/spinnerTo"
        android:layout_centerHorizontal="true"
        android:onClick="onClickRequest" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonWatch"
        android:id="@+id/buttonWatch"
        android:textAllCaps="false"
        android:onClick="onClickWatch"
        android:layout_below="@+id/buttonRequest"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewTillWatchRequest"
        android:id="@+id/textViewTillWatchRequest"
        android:layout_below="@+id/buttonWatch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:clickable="true"
        android:background="#979797" />

</RelativeLayout>
